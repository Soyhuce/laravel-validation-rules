{
    "name": "soyhuce/laravel-validation-rules",
    "description": "A set of useful validation rules for Laravel",
    "keywords": [
        "soyhuce",
        "laravel",
        "laravel-validation-rules"
    ],
    "homepage": "https://github.com/soyhuce/laravel-validation-rules",
    "license": "MIT",
    "authors": [
        {
            "name": "Bastien Philippe",
            "email": "bastien.philippe@soyhuce.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.1",
        "spatie/laravel-package-tools": "^1.9.2",
        "illuminate/contracts": "^9.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.6",
        "nunomaduro/collision": "^6.0",
        "nunomaduro/larastan": "^2.0.1",
        "orchestra/testbench": "^7.0",
        "pestphp/pest": "^1.21",
        "pestphp/pest-plugin-laravel": "^1.1",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^1.0",
        "phpstan/phpstan-phpunit": "^1.0",
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "Soyhuce\\Rules\\": "src",
            "Soyhuce\\Rules\\Database\\Factories\\": "database/factories"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soyhuce\\Rules\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "all": [
            "@cs",
            "@test",
            "@analyse"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Soyhuce\\Rules\\RulesServiceProvider"
            ],
            "aliases": {
                "Rules": "Soyhuce\\Rules\\Facades\\Rules"
            }
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
