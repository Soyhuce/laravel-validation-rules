{
    "name": "soyhuce/laravel-validation-rules",
    "description": "A set of useful validation rules for Laravel",
    "keywords": [
        "soyhuce",
        "laravel",
        "validation",
        "database"
    ],
    "homepage": "https://github.com/soyhuce/laravel-validation-rules",
    "license": "MIT",
    "authors": [
        {
            "name": "Bastien Philippe",
            "email": "bastien.philippe@soyhuce.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.3",
        "illuminate/translation": "^11.0",
        "illuminate/support": "^11.0",
        "illuminate/validation": "^11.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.7",
        "nunomaduro/collision": "^8.1",
        "larastan/larastan": "^3.0",
        "orchestra/testbench": "^9.0",
        "pestphp/pest": "^3.0",
        "pestphp/pest-plugin-laravel": "^3.0",
        "phpstan/extension-installer": "^1.1",
        "phpstan/phpstan-deprecation-rules": "^2.0",
        "phpstan/phpstan-phpunit": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Soyhuce\\Rules\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Soyhuce\\Rules\\Tests\\": "tests"
        }
    },
    "scripts": {
        "cs": "vendor/bin/php-cs-fixer fix",
        "analyse": "vendor/bin/phpstan analyse",
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage",
        "all": [
            "@cs",
            "@test",
            "@analyse"
        ]
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "Soyhuce\\Rules\\RulesServiceProvider"
            ]
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
